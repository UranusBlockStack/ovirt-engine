<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog"
    xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor" >

    <ui:with field='constants' type='org.ovirt.engine.ui.webadmin.ApplicationConstants'/>

    <ui:style>

        .descriptionEditor {
            width: 100%;
        }

        .errorMessageLabel {
            color: #CD2127;
            margin-top: 10px;
            margin-left: 5px;
        }

        .paddingLeft20 {
            padding-left: 20px;
        }

        .paddingLeft10 {
            padding-left: 10px;
        }

        .paddingRight10 {
            padding-right: 10px;
        }

        .lineHeight {
            height: 30px;
            line-height: 30px;
            vertical-align: middle;
        }

        .fullWidgetWidth {
            width: 220px;
        }

        .marginLeft {
            margin-left: 4px;
        }
    </ui:style>

    <d:SimpleDialogPanel width="450px" height="250px">
        <d:content>
            <g:HTMLPanel>
                <iframe ui:field="imageUpload" src="about:blank" width="430" height="180" frameborder="no" border="1" marginwidth="0" marginheight="0" scrolling="no" allowtransparency="yes"></iframe>
            </g:HTMLPanel>
        </d:content>
    </d:SimpleDialogPanel>

</ui:UiBinder>
